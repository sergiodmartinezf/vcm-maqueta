        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">nombre</th>
            <th scope="col">carrera</th>
            <th scope="col">acci√≥n</th>
          </tr>
        </thead>
        <tbody>
         
        <% if (arrayDatosTest.length > 0) { %>
            <% arrayDatosTest.forEach(DatoTest => { %>
                <tr>
                    <th scope="row">
                        <%= DatoTest.id %>
                    </th>
                    <td>
                        <%= DatoTest.nombre %>
                    </td>
                    <td>
                        <%= DatoTest.carrera %>
