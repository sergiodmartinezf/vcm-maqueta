<%- include("template/headTemplate") %>
<%- include("template/navbar1Template") %> <!--
<%- include("template/navbar2Template") %> -->

<!-- TITULO -->
<div class="p-4">
  <h2>
    RESUMEN DEL
  </h2>
  <h1>
    ACADÉMICO
  </h1>
  <a href="/">Inicio</a> -> <a href="/Formulario/AcademicoBuscar"><%= academico.nombre %></a>
</div>

<!-- FORMULARIO -->
<div class="container rounded col-md-12" style="background-color: white;">

    <!-- Datos desplegados -->
    <table class="table">
        <tbody>
          <tr>
            <th scope="col">
              Nombre
            </th>
            <td>
              <%= academico.nombre %>
            </td>
          </tr>
          <tr>
            <th scope="col">
              Campus/Sede
            </th>
            <td>
              <% if (academico.id_campus == 1) { %>
                Osorno
              <% } else if (academico.id_campus == 2) { %>
                Puerto Montt
              <% } else if (academico.id_campus == 3) { %>
                Chiloé
              <% } else { %>
                Santiago
              <% } %>
            </td>
          </tr>
          <tr>
            <th scope="col">
              Departamento Académico
            </th>
            <td>
              <%= academico.departamento %>
            </td>
          </tr>
          <tr>
            <th scope="col">
              Carrera
            </th>
            <td>
              <%= academico.carrera %>
            </td>
          </tr>
        </tbody>
      </table>

      <h4 class="container rounded" style="background-color: lightgrey;">
        Actividades
      </h4>
  
      <!-- Datos desplegados -->
      <table class="table">
          <thead>
            <tr>
              <th scope="col">Número</th>
              <th scope="col">Nombre</th>
              <th scope="col">Descripción</th>
              <th scope="col">Objetivo</th>
              <th scope="col">Tipo de Actividad</th>
              <th scope="col">Tipo de Destinatario</th>
              <th scope="col">Instrumento Administrativo</th>
              <th scope="col">Lugar</th>
              <th scope="col">Fecha</th>
              <th scope="col">Estado</th>
              <th scope="col">Campus</th>
            </tr>
          </thead>
          <tbody>
            <% if (academicoActividad.length > 0) { %>
              <% academicoActividad.forEach(academicoActividad => { %>
                  <tr>
                      <th scope="row">
                        <%= academicoActividad.id_actividad %>
                      </th>
                      <td>
                        <%= academicoActividad.nombre %>
                      </td>
                      <td>
                        <%= academicoActividad.descripcion %>
                      </td>
                      <td>
                        <%= academicoActividad.objetivo %>
                      </td>
                      <td>
                        <%= academicoActividad.id_tipo_actividad %>
                      </td>
                      <td>
                        <%= academicoActividad.id_tipo_destinatario %>
                      </td>
                      <td>
                        <%= academicoActividad.id_inst_administrativo %>
                      </td>
                      <td>
                        <%= academicoActividad.lugar %>
                      </td>
                      <td>
                        <%= academicoActividad.fecha %>
                      </td>
                      <td>
                        <% if (academicoActividad.id_estado_actividad == 1) { %>
                          Abierto
                        <% } else { %>
                          Cerrado
                        <% } %>
                      </td>
                      <td>
                        <% if (academicoActividad.id_campus == 1) { %>
                          Osorno
                        <% } else if (academicoActividad.id_campus == 2) { %>
                          Puerto Montt
                        <% } else if (academicoActividad.id_campus == 3) { %>
                          Chiloé
                        <% } else { %>
                          Santiago
                        <% } %>
                      </td>
                    </tr>
              <% }) %>
          <% } %>
          </tbody>
        </table>


  </div>
  
</body>

</html>
