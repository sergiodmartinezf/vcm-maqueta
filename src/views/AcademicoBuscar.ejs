<%- include("template/headTemplate") %>
<%- include("template/navbar1Template") %>

<div class="container col-md-8">

  <h1>RESUMEN POR ACADÉMICO</h1>

  <a href="/">Inicio</a> -> <a href="/Formulario/AcademicoBuscar">Buscar</a>

    <form action="/Formulario/AcademicoBuscar" method="POST">

    <div class="row p-2">
    <div class="form-group col-md-10">
      <input class="form-control" type="text" name="WALWLEEALWDLWLFAWLDKF" id="id_WALWLEEALWDLWLFAWLDKF"></input>
    </div>
    <div class="form-group col-md-2">
      <button class="btn btn-primary btn-block">BUSCAR</button>
    </div>
  </div>
    </form>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">Número</th>
          <th scope="col">Nombre</th>
          <th scope="col">Campus/Sede</th>
          <th scope="col">Departamento Académico</th>
          <th scope="col">Carrera</th>
        </tr> 
      </thead>
      <tbody>
        <% if (array_vcm_academicos.length > 0) { %>
            <% array_vcm_academicos.forEach(vcm_academicos => { %>
                <tr>
                    <th scope="row">
                      <a href="/Formulario/AcademicoResumen/<%= vcm_academicos.id_academico %>"><%= vcm_academicos.id_academico %></a>
                    </th>
                    <td>
                      <%= vcm_academicos.nombre %>
                    </td>
                    <td>
                      <% if (vcm_academicos.id_campus == 1) { %>
                        Osorno
                      <% } else if (vcm_academicos.id_campus == 2) { %>
                        Puerto Montt
                      <% } else if (vcm_academicos.id_campus == 3) { %>
                        Chiloé
                      <% } else { %>
                        Santiago
                      <% } %>
                    </td>
                    <td>
                      <%= vcm_academicos.departamento %>
                    </td>
                    <td>
                      <%= vcm_academicos.carrera %>
                    </td>
                  </tr>
            <% }) %>
        <% } %>
        </tbody>
    </table>

</div>

</body>

</html>
