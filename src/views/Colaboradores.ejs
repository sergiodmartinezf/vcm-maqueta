<!-- Importar código para el estilo general de la página -->
<%- include("template/headTemplate") %>

<!-- Importar código para la barra de navegación en la parte superior de la página -->
<%- include("template/navbar1Template") %>

<!-- Importar código para la barra de navegación en la página de actividades -->
<%- include("template/navbar2Template") %>

<!-- Página para buscar colaboradores --> 

<!-- Título --> 
<div class="p-4">
  <h2>
    ACTIVIDADES
  </h2>
  <h1>
    COLABORADORES
  </h1>
  <a href="/">Inicio</a> -> <a href="/Formulario/ActividadInformacion/<%= actividad.id_actividad %>"><%= actividad.nombre %></a> -> Colaboradores
</div>

<!-- Formulario --> 
<div class="container rounded col-md-8" style="background-color: white;">

    <form action="/Formulario/ActividadInformacion/<%= actividad.id_actividad %>/Colaboradores" method="POST">

    <div class="row p-2">
    <div class="form-group col-md-2">
      <label for="id_tipoColaborador">Tipo</label>
      <input class="form-control" name="tipoColaborador" id="id_tipoColaborador" required>
      </select>
    </div>
    <div class="form-group col-md-2">
      <label for="id_rutColaborador">Rut</label>
      <input class="form-control" name="rutColaborador" id="id_rutColaborador" required>
      </select>
    </div>
    <div class="form-group col-md-2">
      <label for="id_nombreColaborador">Nombre</label>
      <input class="form-control" name="nombreColaborador" id="id_nombreColaborador" required>
      </select>
    </div>
    <div class="form-group col-md-2">
      <label for="id_apellidoPaternoColaborador">Apellido Paterno</label>
      <input class="form-control" name="apellidoPaternoColaborador" id="id_apellidoPaternoColaborador" required>
      </select>
    </div>
    <div class="form-group col-md-2">
      <label for="id_apellidoMaternoColaborador">Apellido Materno</label>
      <input class="form-control" name="apellidoMaternoColaborador" id="id_apellidoMaternoColaborador" required>
      </select>
    </div>
    <div class="form-group col-md-2">
      <button class="btn btn-primary btn-block">+</button>
    </div>
  </div>
    </form>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">Tipo</th>
          <th scope="col">Rut</th>
          <th scope="col">Nombres</th>
          <th scope="col">Apellido Paterno</th>
          <th scope="col">Apellido Materno</th>
        </tr>
      </thead>
    </table>

</div>

    <div class="p-4 d-grid gap-2 d-md-flex justify-content-md-end">
      <button class="btn btn-primary btn-block" type="submit">
        Guardar
      </button>
    </div>

</body>

</html>
