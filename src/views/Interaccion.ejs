<!-- Importar código para el estilo general de la página -->
<%- include("template/headTemplate") %>

<!-- Importar código para la barra de navegación en la parte superior de la página -->
<%- include("template/navbar1Template") %>

<!-- Importar código para la barra de navegación en la página de actividades -->
<%- include("template/navbar2Template") %>

<!-- Página de interacción --> 

<!-- Título --> 
<div class="p-4">
  <h2>
    ENCUESTA DE LA ACTIVIDAD
  </h2>
  <h1>
    INTERACCIÓN
  </h1>
  <a href="/">Inicio</a> -> <a href="/Formulario/ActividadInformacion/<%= actividad.id_actividad %>"><%= actividad.nombre %></a> -> Interacción
</div>

<!-- Formulario -->
<div class="container rounded col-md-8" style="background-color: white;">

    <form action="/Formulario/ActividadInformacion/<%= actividad.id_actividad %>/Interaccion" method="POST">

      <!-- SECCIÓN 1 -->
      <h2>1.-Interacción</h2>
      <div class="form-group p-2">
        <label for="id_1_1_numeroConvenio">1.1.-Número de Convenio</label>
        <input class="form-control" type="text" name="1_1_numeroConvenio" id="id_1_1_numeroConvenio" required></input>
      </div>

      <!-- SECCIÓN 2 -->
      <h2>2.-Interacción interna</h2>
      <div class="form-group p-2">
        <label for="id_2_1_conQuienInteractuo">2.1.-¿Con quiénes interactuó o se asoció?</label>
        <input class="form-control" type="text" name="2_1_conQuienInteractuo" id="id_2_1_conQuienInteractuo" required></input>
      </div>

      <div class="row p-2">
      <div class="form-group col-md-7">
        <label for="id_2_2_cuantosAcademicos">2.2.-¿Cuántos académicos?</label>
      </div>
      <div class="form-group col-md-5">
        <input class="form-control" type="text" name="2_2_cuantosAcademicos" id="id_2_2_cuantosAcademicos" required></input>
      </div>
    </div>

    <div class="row p-2">
      <div class="form-group col-md-7">
        <label for="id_2_3_cuantosAdministrativos">2.3.-¿Cuántos administrativos?</label>
      </div>
      <div class="form-group col-md-5">
        <input class="form-control" type="text" name="2_3_cuantosAdministrativos" id="id_2_3_cuantosAdministrativos" required></input>
      </div>
    </div>
      
    <div class="row p-2">
      <div class="form-group col-md-7">
        <label for="id_2_4_cuantosEstudiantes">2.4.-¿Cuántos estudiantes?</label>
      </div>
      <div class="form-group col-md-5">
        <input class="form-control" type="text" name="2_4_cuantosEstudiantes" id="id_2_4_cuantosEstudiantes" required></input>
      </div>
    </div>

      <!-- SECCIÓN 3 -->
      <h2>3.-Interacción externa</h2>
      <div class="row p-2">
        <div class="form-group col-md-7">
        <label for="id_3_1_conQuienTrabajo">3.1.-¿Con quién se trabajó?</label>
      </div>
      <div class="form-group col-md-5">
        <select class="form-control" name="3_1_conQuienTrabajo" id="id_3_1_conQuienTrabajo" required>
          <option value="1">Sector Productivo</option>
          <option value="2">Sector Social</option>
          <option value="3">Sector Gubernamental</option>
        </select>
      </div>
      </div>

      <!-- SECCIÓN 4 --> 
      <h2>4.-Cobertura</h2>
      <div class="row p-2">
      <div class="form-group col-md-7">
        <label for="id_4_1_alcanceTerritorial">4.1.-Alcance Territorial</label>
      </div>
      <div class="form-group col-md-5">
        <select class="form-control" name="4_1_alcanceTerritorial" id="id_4_1_alcanceTerritorial" required>
          <option value="4_1_alcanceTerritorial_opcion1">4_1_alcanceTerritorial_opcion1</option>
          <option value="4_1_alcanceTerritorial_opcion2">4_1_alcanceTerritorial_opcion2</option>
          <option value="4_1_alcanceTerritorial_opcion3">4_1_alcanceTerritorial_opcion3</option>
        </select>
      </div>
    </div>
  
  </div>

    <div class="p-4 d-grid gap-2 d-md-flex justify-content-md-end">
      <button class="btn btn-block" type="submit">
        <i class="bi-floppy-fill" style="font-size: 2rem; color: dodgerblue;"></i>
      </button>
    </div>

  </form>

</body>

</html>
