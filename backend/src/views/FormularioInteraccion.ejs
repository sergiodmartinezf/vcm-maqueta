<%- include("template/headTemplate") %>

<body>

  <h1>
    ENCUESTA DE LA ACTIVIDAD
    INTERACCIÓN
  </h1>
    <form action="/Formulario/FormularioInteraccion" method="POST">

      <!-- SECCIÓN 1 -->
      <h2>1.-Interacción</h2>
      <div>
        <label for="id_1_1_numeroConvenio">1.1.-Número de Convenio</label>
        <input type="text" name="1_1_numeroConvenio" id="id_1_1_numeroConvenio"></input>
      </div>

      <!-- SECCIÓN 2 -->
      <h2>2.-Interacción interna</h2>
      <div>
        <label for="id_2_1_conQuienInteractuo">2.1.-¿Con quiénes interactuó o se asoció?</label>
      </div>
      <div>
        <input type="text" name="2_1_conQuienInteractuo" id="id_2_1_conQuienInteractuo"></input>
      </div>
      <div>
        <label for="id_2_2_cuantosAcademicos">2.2.-¿Cuántos académicos?</label>
        <input type="text" name="2_2_cuantosAcademicos" id="id_2_2_cuantosAcademicos"></input>
      </div>
      <div>
        <label for="id_2_3_cuantosAdministrativos">2.3.-¿Cuántos administrativos?</label>
        <input type="text" name="2_3_cuantosAdministrativos" id="id_2_3_cuantosAdministrativos"></input>
      </div>
      <div>
        <label for="id_2_4_cuantosEstudiantes">2.4.-¿Cuántos estudiantes?</label>
        <input type="text" name="2_4_cuantosEstudiantes" id="id_2_4_cuantosEstudiantes"></input>
      </div>

      <!-- SECCIÓN 3 -->
      <h2>3.-Interacción externa</h2>
      <div>
        <label for="id_3_1_conQuienTrabajo">3.1.-¿Con quién se trabajó?</label>
        <select name="3_1_conQuienTrabajo" id="id_3_1_conQuienTrabajo">
          <option value="3_1_conQuienTrabajo_opcion1">3_1_conQuienTrabajo_opcion1</option>
          <option value="3_1_conQuienTrabajo_opcion2">3_1_conQuienTrabajo_opcion2</option>
          <option value="3_1_conQuienTrabajo_opcion3">3_1_conQuienTrabajo_opcion3</option>
        </select>
      </div>

      <!-- SECCIÓN 4 -->
      <h2>4.-Cobertura</h2>
      <div>
        <label for="id_4_1_alcanceTerritorial">4.1.-Alcance Territorial</label>
        <select name="4_1_alcanceTerritorial" id="id_4_1_alcanceTerritorial">
          <option value="4_1_alcanceTerritorial_opcion1">4_1_alcanceTerritorial_opcion1</option>
          <option value="4_1_alcanceTerritorial_opcion2">4_1_alcanceTerritorial_opcion2</option>
          <option value="4_1_alcanceTerritorial_opcion3">4_1_alcanceTerritorial_opcion3</option>
        </select>
      </div>
      
    </form>

    <div>
      <a class="btn btn-success btn-block" href="/Formulario/FormularioActividadInformacion">FormularioActividadInformacion</a>
    </div>

</body>